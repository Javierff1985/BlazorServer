@inject NavigationManager NavManager

<style>
    
    .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        width: 260px;
        height: 100vh;
        padding: 2rem 1.5rem;
        background: rgba(255, 255, 255, 0.1); /* Transparente */
        backdrop-filter: blur(14px); /* Glassmorphism */
        border-right: 1px solid rgba(200, 200, 200, 0.5);
        box-shadow: 4px 0 16px rgba(0, 0, 0, 0.3);
        display: flex;
        flex-direction: column;
        gap: 1.2rem;
        z-index: 100;
    }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

        .sidebar li {
            margin: 10px 0;
        }

        .sidebar .section-title {
            font-weight: bold;
            margin-top: 20px;
            color: #aaa;
            text-transform: uppercase;
            font-size: 0.9em;
        }

        .sidebar a {
            color: white;
            text-decoration: none;
            padding: 8px 12px;
            display: block;
            border-radius: 4px;
            transition: background 0.3s;
        }

            .sidebar a.active,
            .sidebar a:hover {
                background-color: red;
            }



    .nav-link.active {
        background-color: #3a3a5a;
        color: #fff;
        border-radius: 8px;
    }

    .animated-bg {
        background: linear-gradient(135deg, #111 0%, #222 100%);
        animation: fadeIn 1.2s ease-in-out;
    }

    .fade-in {
        animation: fadeInUp 1s ease-out;
    }

    .glow-red {
        color: #dc3545;
        text-shadow: 0 0 10px #dc3545, 0 0 16px #ff4d4d;
    }

    .hover-fade:hover {
        background-color: #dc3545 !important;
        color: white !important;
        transition: all 0.3s ease;
    }

    /* Animaciones */
    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }




</style>

    <nav class="sidebar">
        <div class="text-center">
            <img src="/NuevoLogoRedwall.png" style="width:100%;height:110px" />
            <br />
        </div>
        <ul>
            <li class="section-title">Ink Room</li>

        <li><NavLink class="glow-red" style="color:white" href="InkRoom/EntryPigment">Entry Pigment</NavLink></li>
        <li><NavLink class="glow-red" style="color:white"  href="InkRoom/updatePigment">Update Pigment</NavLink></li>
        <li><NavLink class="glow-red" style="color:white"  href="Inkroom/StockQuality">Stock Quality</NavLink></li>

            <li class="section-title">Report</li>

        <li><NavLink class="glow-red" style="color:white"  href="/Reports/ReportPigment">Pigment Report</NavLink></li>
            <li><NavLink class="glow-red" style="color:white" href="Reports/StockMixed">Stock Mixed</NavLink></li>
        </ul>
    </nav>




@code {

    private bool isPigmentSectionActive => NavManager.Uri.Contains("/InkRoom/");



    private bool showInkroomSubmenu = false;
    private bool showDashboardSubmenu = false;

    private void ToggleInkRoomSubmenu()
    {
        showInkroomSubmenu = !showInkroomSubmenu;
    }
    private void ToggleDashboardSubmenu()
    {
        showDashboardSubmenu = !showDashboardSubmenu;
    }
}

